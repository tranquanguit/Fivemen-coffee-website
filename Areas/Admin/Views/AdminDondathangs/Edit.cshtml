@model doan.Models.Dondathang
@{
    ViewData["Title"] = "Chỉnh sửa đơn đặt hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item" style="font-family:'Segoe UI'; font-size: 16px"><i class="anticon anticon-home m-r-5"style="color: orangered"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminDondathangs" asp-action="Index" style="font-family:'Segoe UI'; font-size: 16px">Danh sách đơn đặt hàng</a>
            <span class="breadcrumb-item active" style="font-family:'Segoe UI'; font-size: 16px">Chỉnh sửa đơn đặt hàng</span>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.MaDdh" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDdh" />
            <div class="form-group">
                <label class="control-label" style="font-weight:bold">Tên khách hàng</label>
                <select asp-for="MaKh" class="form-control" asp-items="ViewBag.MaKh"></select>
                <span asp-validation-for="MaKh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaVoucher" class="control-label" style="font-weight:bold">Tên khuyến mãi</label>
                <select asp-for="MaVoucher" class="form-control" asp-items="ViewBag.MaVoucher"></select>
                <span asp-validation-for="MaVoucher" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{ var temp = Model.TongDonHang.Value.ToString("#,##0") + " VNĐ";}
                <label asp-for="TongDonHang" class="control-label" style="font-weight:bold">Tổng tiền</label>
                <input asp-for="TongDonHang" class="form-control" />
                <span asp-validation-for="TongDonHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{ var tempp = Model.SoTienGiam.Value.ToString("#,##0") + " VNĐ";}
                <label asp-for="SoTienGiam" class="control-label" style="font-weight:bold">Số tiền giảm</label>
                <input asp-for="SoTienGiam" class="form-control" />
                <span asp-validation-for="SoTienGiam" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{ var temppp = Model.ThanhTien.Value.ToString("#,##0") + " VNĐ";}

                <label asp-for="ThanhTien" class="control-label" style="font-weight:bold">Thành tiền</label>
                <input asp-for="ThanhTien" class="form-control" />
                <span asp-validation-for="ThanhTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNv" class="control-label" style="font-weight:bold">Nhân viên tạo</label>
                <select asp-for="MaNv" class="form-control" asp-items="ViewBag.MaNv"></select>
                <span asp-validation-for="MaNv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayDatHang" class="control-label" style="font-weight:bold">Ngày đặt hàng</label>
                <input asp-for="NgayDatHang" class="form-control" />
                <span asp-validation-for="NgayDatHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNvc" class="control-label" style="font-weight:bold">Đơn vị vận chuyển</label>
                <select asp-for="MaNvc" class="form-control" asp-items="ViewBag.MaNvc"></select>
                <span asp-validation-for="MaNvc" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>