@model doan.Models.Danhmucsp 

@{
    ViewData["Title"] = "Xác nhận xóa danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item" style="font-family:'Segoe UI'; font-size: 16px">
                <i class="anticon anticon-home m-r-5" style="color: orangered"></i>
                Home
            </a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminDanhmucsps" asp-action="Index" style="font-family:'Segoe UI'; font-size: 16px">Danh sách danh mục sản phẩm</a>
            <span class="breadcrumb-item active" style="font-family:'Segoe UI'; font-size: 16px">Xóa danh mục</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title" style="color: orangered; font-size: 20px">Xác nhận xóa danh mục sản phẩm</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td style="font-weight:bold">ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.MaDanhMuc</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">Tên danh mục:</td>
                        <td>@Model.TenDanhMuc</td>
                    </tr>

                    <tr>
                        <td style="font-weight:bold">Mô tả danh mục:</td>
                        <td>@Model.MoTa</td>
                    </tr>
                    <tr>
                        <td style="font-weight:bold">Xác nhận xóa:</td>
                        <td>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="MaDanhMuc" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> 
                                
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



