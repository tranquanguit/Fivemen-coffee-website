@model IEnumerable<doan.Models.Taikhoan> 
@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item" style="font-family:'Segoe UI'; font-size: 16px">
                <i class="anticon anticon-home m-r-5" style="color: orangered"></i>
                Home
            </a>
            <span class="breadcrumb-item active" style="font-family:'Segoe UI'; font-size: 16px">Danh sách tài khoản</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr style="font-family:'Segoe UI'; font-size: 18px; font-weight: bold; background-color: #b7e3cc">
                        <th>ID</th>
                        <th>Số điện thoại</th>
                        <th>Mật khẩu</th>
                        <th>Quyền truy cập</th>
                        <th>Chức năng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.MaTk
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                                        <h6 class="m-b-0 m-l-10">@item.SoDienThoai</h6>
                                    </div>
                                </td>
                                <td>@item.MatKhau</td>
                                <td>@item.Role.RoleName</td>
                                <td>
                                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminTaikhoans" asp-action="Details" asp-route-id="@item.MaTk">Chi tiết</a>
                                    <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminTaikhoans" asp-action="Edit" asp-route-id="@item.MaTk">Sửa</a>
                                    <a class="btn btn-danger btn-tone m-r-5" asp-area="Admin" asp-controller="AdminTaikhoans" asp-action="Delete" asp-route-id="@item.MaTk">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>