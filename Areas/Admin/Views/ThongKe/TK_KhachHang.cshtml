@{
    ViewData["Title"] = "Thống kê loại khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@{
    var list_kh = (SortedList<string, int>)ViewBag.ListKH; 
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <h5 style="color: orangered; font-size: 20px">Thống kê loại khách hàng </h5>
        </div>
        <div class="m-t-30">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr style="font-family:'Segoe UI'; font-size: 18px; font-weight: bold; background-color: #b7e3cc">
                            <th>Loại khách hàng</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (list_kh != null)
                        {
                            foreach (var item in list_kh)
                            {
                                <tr>
                                    <td>
                                        @item.Key
                                    </td>
                                    <td>
                                        @item.Value
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


