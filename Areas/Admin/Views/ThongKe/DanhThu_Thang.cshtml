@{    
    ViewData["Title"] = "Doanh thu theo tháng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@{
    var list_dtt = (SortedList<string, int>)ViewBag.ListDTT; 
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <h5 style="color: orangered; font-size: 20px">Doanh thu theo tháng </h5>
        </div>
        <div class="m-t-30">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr style="font-family:'Segoe UI'; font-size: 18px; font-weight: bold; background-color: #b7e3cc">
                            <th>Ngày</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (list_dtt != null)
                        {
                            foreach (var item in list_dtt)
                            {
                                <tr>
                                    <td>
                                        @item.Key
                                    </td>
                                    <td>
                                        @item.Value.ToString("#,##0") VNĐ
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


