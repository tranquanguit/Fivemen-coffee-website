@model doan.Models.Hinhanh
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item" style="font-family:'Segoe UI'; font-size: 16px">
                <i class="anticon anticon-home m-r-5" style="color: orangered"></i>
                Home
            </a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminHinhanhs" asp-action="Index" style="font-family:'Segoe UI'; font-size: 16px">Danh sách hình ảnh</a>
            <span class="breadcrumb-item active" style="font-family:'Segoe UI'; font-size: 16px">Thêm hình ảnh</span>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="AdminHinhanhs" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LinkHinhAnh" class="control-label" style="font-weight:bold">Chọn hình ảnh</label>
                <input name="myfile" type="file" asp-for="LinkHinhAnh" class="form-control-file" />
                <span asp-validation-for="LinkHinhAnh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaSp" class="control-label" style="font-weight:bold">Tên sản phẩm</label>
                <select asp-for="MaSp" class="form-control" asp-items="ViewBag.MaSp"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-warning rounded" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
