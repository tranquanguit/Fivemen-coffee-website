@{
    ViewData["Title"] = "Đơn hàng của bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    List<GioHang> list_item = (List<GioHang>)ViewBag.donDH;
    int madh = ViewBag.madh;
    Dondathang ddh = ViewBag.ddh;

}
<div class="container p-5">
    <div class="your-order">
        <h3 style="font-family:'Segoe UI'; color:orangered">Đơn hàng của bạn: @madh </h3>
        <div class="your-order-table table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th class="cart-product-name" style="font-family:'Segoe UI'; font-size:24px; font-weight: bold">Sản phẩm</th>
                        <th class="cart-product-total" style=" font-family:'Segoe UI'; font-size:24px; font-weight: bold">Tổng tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var tongtien = 0;
                    }
                    @foreach (var item in list_item)
                    {
                        <tr class="cart_item">
                            <td class="cart-product-name">
                                @item.sanpham.TenSp <strong class="product-quantity"> × @item.Soluong</strong>
                            </td>
                            @{
                                var sump = @item.Soluong * @item.sanpham.GiaTien;
                                tongtien += Convert.ToInt32(sump);
                            }
                            <td class="cart-product-total"><span class="amount">@sump.Value.ToString("#,##0") VNĐ</span></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="cart-subtotal">
                        <th style="font-size: 20px">Thành tiền</th>
                        <td><span class="amount" style="font-weight: bold">@tongtien.ToString("#,##0") VNĐ</span></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
