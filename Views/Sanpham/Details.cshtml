@model doan.Models.Sanpham

@{
    ViewData["Title"] = Model.MoTa;
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Sanpham> lsProduct = ViewBag.Sanpham;
}
<!-- Begin Main Content Area  -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/assets/images/slider/bg/slide-shop.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h1 class="breadcrumb-heading" style="font-family:'Segoe UI'; color:orangered">@Model.TenSp</h1>
                        <ul>
                            <li>
                                <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>@Model.TenSp</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="single-product-area section-space-top-100 section-space-bottom-95">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="single-product-img h-100">
                        <div class="swiper-container single-product-slider">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide">
                                    @{ string temp = @Model.MaSp + ".jpg";}
                                    <a href="~/Image/@temp" class="single-img gallery-popup">
                                        <img class="img-full" src="~/Image/@temp" alt="@Model.MoTa">
                                    </a>
                                </div>
                                <div class="swiper-slide">
                                    <a href="~/assets/images/product/large-size/2-2-555x645.jpg" class="single-img gallery-popup">
                                        <img class="img-full" src="~/assets/images/product/large-size/2-2-555x645.jpg" alt="Product Image">
                                    </a>
                                </div>
                                <div class="swiper-slide">
                                    <a href="~/assets/images/product/large-size/2-3-555x645.jpg" class="single-img gallery-popup">
                                        <img class="img-full" src="~/assets/images/product/large-size/2-3-555x645.jpg" alt="Product Image">
                                    </a>
                                </div>
                                <div class="swiper-slide">
                                    <a href="~/assets/images/product/large-size/2-4-555x645.jpg" class="single-img gallery-popup">
                                        <img class="img-full" src="~/assets/images/product/large-size/2-4-555x645.jpg" alt="Product Image">
                                    </a>
                                </div>
                            </div>
                            <!-- Add Pagination -->
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product-thumb-with-content row">
                        <div class="col-12 order-lg-1 order-2 pt-10 pt-lg-0">
                            <div class="single-product-content">
                                <h2 class="title">@Model.TenSp</h2>
                                <div class="price-box pb-1">
                                    <span class="new-price text-danger" style="font-size: 20px; font-weight: bold">@Model.GiaTien.Value.ToString("#,##0") VNĐ</span>
                                </div>
                                <p class="short-desc mb-6">
                                    @Model.MoTa
                                </p>
                                <ul class="quantity-with-btn pb-7">
                                    <li class="add-to-cart">
                                        <form class="bg-warning rounded" id="addtocart" action="/GioHang/Add_cart?product_id=@Model.MaSp" method="post">
                                            <a onclick="document.getElementById('addtocart').submit();" class="btn btn-custom-size lg-size btn-warning btn-secondary-hover rounded" href="#">Thêm vào giỏ hàng</a>
                                        </form>
                                    </li>
                                </ul>
                                <div class="product-category pb-2">
                                    <span class="title"><b>Danh mục: </b></span>
                                    <ul>
                                        @{string tamthoi = @Model.MaDanhMucNavigation.TenDanhMuc + ".html";}
                                        <li>
                                            <a href="/@Model.MaDanhMucNavigation.MaDanhMuc/@tamthoi">@Model.MaDanhMucNavigation.TenDanhMuc</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
