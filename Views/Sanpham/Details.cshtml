    <div class="product-slider-area section-space-bottom-100">
        <div class="container">
            <hr style="color:orangered; text-align: center" />
            <div class="section-title text-center pt-5 pb-55">
                <span class="pb-5" style=" font-family:'Segoe UI'; color: black; font-size: 20px">Có thể bạn cũng thích</span>
                <h2 class="title mb-0 pt-5" style=" font-family:'Segoe UI'; color: orangered">Sản phẩm tương tự</h2>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="swiper-slider-holder swiper-arrow">
                        <div class="swiper-container product-slider border-issue">
                            <div class="swiper-wrapper">
                                @if (lsProduct != null)

                                {
                                    var stt = 0;
                                    foreach (var item in lsProduct)

                                    {
                                        string url = $"/{item.MaSp}.html";
                                        <div class="swiper-slide">
                                            <div class="product-item">
                                                <div class="product-img img-zoom-effect rounded">
                                                    @{ string tam = @item.MaSp + ".jpg";}
                                                    <a href="@url">

                                                        <img class="img-full rounded" src="~/Image/@tam" alt="@item.MoTa">
                                                    </a>
                                                    <div class="product-add-action">
                                                        <ul>
                                                            <li>
                                                                @{
                                                                    stt += 1;
                                                                    var id_add = "add_cart3" + @stt.ToString();
                                                                }
                                                                <form action="/GioHang/Add_cart?product_id=@item.MaSp" method="post" id="@id_add">
                                                                    <a class="bg-warning rounded" href="#" onclick="document.getElementById('@id_add').submit();">
                                                                        <i class="pe-7s-cart" style="font-size:24px; font-weight:bold"></i>
                                                                    </a>
                                                                </form>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="product-content texx">
                                                    <a class="product-name" href="@url">@item.TenSp</a>
                                                    <div class="price-box pb-1">
                                                        <span class="new-price text-danger" style="font-weight: bold">@item.GiaTien.Value.ToString("#,##0") VNĐ</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <!-- Add Arrows -->
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

