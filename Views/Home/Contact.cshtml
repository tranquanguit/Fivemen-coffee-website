@{
    ViewData["Title"] = "Thông tin liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area pb-5 breadcrumb-height" data-bg-image="/assets/images/slider/bg/slide-shop.jpg"></div>
    <div class="container pt-5 h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                    <h2 class="breadcrumb-heading" style="font-family:'Segoe UI'; color:orangered">
                        <img src="~/assets/images/icon/contact.png" />
                        Liên hệ với Fivemen coffee</h2>
                        <ul>
                            <li>
                                <a href="/home">Trang chủ<i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Liên hệ</li>
                        </ul>
                    </div>
                </div>
            </div>
    </div>

    <div class="contact-with-map pt-5">
        <div class="contact-map">
            <iframe class ="contact-map-size" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.231240377643!2d106.80086541521221!3d10.870008892258022!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317527587e9ad5bf%3A0xafa66f9c8be3c91!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBDw7RuZyBuZ2jhu4cgVGjDtG5nIHRpbiDEkEhRRyBUUC5IQ00!5e0!3m2!1svi!2s!4v1639931381490!5m2!1svi!2s" allowfullscreen="" loading="lazy"></iframe>        
        </div>
        <div class="contact-form-area pb-5">
            <div class="container">
                <div class="contact-form-wrap">
                    <form id="contact-form" class="contact-form">
                        <h4 class="contact-form-title pb-2 mb-7">Gửi tin nhắn cho chúng tôi</h4>
                        <div class="form-field">
                            <input type="text" name="con_name" placeholder="Tên của bạn" class="input-field">
                        </div>
                        <div class="form-field mt-6">
                            <input type="text" name="con_email" placeholder="Email" class="input-field">
                        </div>
                        <div class="form-field mt-6">
                            <textarea name="con_message" placeholder="Lời nhắn" class="textarea-field"></textarea>
                        </div>
                        <div class="button-wrap mt-8">
                            <button type="submit" value="submit" class="btn btn btn-custom-size lg-size btn-warning btn-secondary-hover rounded" name="submit">Gửi ngay!</button>
                        </div>
                        <p class="form-messege mt-3 mb-0"></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Begin Shipping Area -->
    <div class="shipping-area pt-5 pb-5">
        <div class="container">
            <hr style="color:orangered; text-align: center" />
            <div class="section-title text-center pt-5 p pb-55">
                <h2 class="title mb-0" style="font-family:'Segoe UI'; color:orangered">
                    <img src="~/assets/images/icon/choice.png" />
                    Tại sao nên chọn Fivemen cofee
                </h2>
            </div>
            <div class="row" style="justify-content: center">
                <div class="col-lg-4 col-md-6 pl-5 pr-5" style="width:350px">
                    <div class="shipping-item">
                        <div class="shipping-img mb-5">
                            <img src="~/assets/images/shipping/uy-tin.png" alt="Shipping Icon">
                        </div>
                        <div class="shipping-desc">
                            <h5 class="title mb-4">Uy tín</h5>
                            <p class="short-desc mb-0">Đơn vị cung cấp cà phê uy tín hàng đầu Việt Nam</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 pl-5 pr-5" style="width:350px">
                    <div class="shipping-item">
                        <div class="shipping-img mb-5">
                            <img src="~/assets/images/shipping/high-quality.png" alt="Shipping Icon">
                        </div>
                        <div class="shipping-desc">
                            <h5 class="title mb-4">Chất lượng cao</h5>
                            <p class="short-desc mb-0">Sản phẩm chất lượng cao với đa dạng chủng loại</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 pl-5 pr-5" style="width:350px">
                    <div class="shipping-item">
                        <div class="shipping-img mb-5">
                            <img src="~/assets/images/shipping/insurance.png" alt="Shipping Icon">
                        </div>
                        <div class="shipping-desc">
                            <h5 class="title mb-4">Chính sách bảo hành</h5>
                            <p class="short-desc mb-0">Chế độ bảo hành rõ ràng và đảm bảo quyền lợi cho khách hàng</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Shipping Area End Here -->

</main>
<!-- Main Content Area End Here -->
